<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
	<schema id="technology.unrelenting.numbernine.settings" path="/technology/unrelenting/numbernine/settings/">

		<key name="xkb-layouts" type="a(ss)">
			<default>[('us', '')]</default>
			<summary>Keyboard layouts with variants</summary>
		</key>

		<key name="xkb-options" type="as">
			<default>['compose:ralt', 'grp:alt_space_toggle']</default>
			<summary>Keyboard layouts with variants</summary>
		</key>

		<key name="xkb-rule" type="s">
			<default>'evdev'</default>
			<summary>Keyboard layout rule</summary>
		</key>

		<key name="kb-repeat-rate" type="u">
			<default>40</default>
			<summary>Keyboard repeat rate in ms</summary>
		</key>

		<key name="kb-repeat-delay" type="u">
			<default>400</default>
			<summary>Keyboard repeat delay in ms</summary>
		</key>

		<key name="m2k-ctrl-as-esc" type="b">
			<default>false</default>
			<summary>Control pressed on its own types Escape</summary>
		</key>

		<key name="m2k-shifts-as-parens" type="b">
			<default>false</default>
			<summary>Shifts pressed on their own type parentheses</summary>
		</key>

		<key name="mice-accel-speed" type="d">
			<default>0.0</default>
			<summary>Acceleration speed (-1.0 to 1.0, where 0 is device default) for mice</summary>
		</key>

		<key name="mice-scroll-speed" type="d">
			<default>1.0</default>
			<summary>Scrolling speed (0.1 to 2.0, where 1 is device default) for mice</summary>
		</key>

		<key name="touchpads-accel-speed" type="d">
			<default>0.0</default>
			<summary>Acceleration speed (-1.0 to 1.0, where 0 is device default) for touchpads</summary>
		</key>

		<key name="touchpads-scroll-speed" type="d">
			<default>1.0</default>
			<summary>Scrolling speed (0.1 to 2.0, where 1 is device default) for touchpads</summary>
		</key>

		<key name="touchpads-natural-scrolling" type="b">
			<default>true</default>
			<summary>Use natural scrolling on touchpads</summary>
		</key>

		<key name="touchpads-tap-click" type="b">
			<default>true</default>
			<summary>Use tap-to-click on touchpads</summary>
		</key>

		<key name="touchpads-click-method" type="s">
			<default>'default'</default>
			<summary>Touchpad click method</summary>
		</key>

		<key name="touchpads-scroll-method" type="s">
			<default>'default'</default>
			<summary>Touchpad scroll method</summary>
		</key>

		<key name="touchpads-dwt" type="b">
			<default>false</default>
			<summary>Use disable-while-typing on touchpads</summary>
		</key>

		<key name="touchpads-dwmouse" type="b">
			<default>false</default>
			<summary>Use disable-on-external-mouse on touchpads</summary>
		</key>

	</schema>
</schemalist>
